{
  "name": "@ack/synapse",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "npm run ::bg-test-server \"ng serve --preserve-symlinks --hmr\"",
    "coverage": "npm run ::concurently \"npm run start-test-server\" \"ng test --watch=false --code-coverage\"",
    "lint": "ng lint",
    "build": "./node_modules/.bin/ngc -p tsconfig.dist.json",
    "package": "ng-packagr -p ng-package.json",
    "build:watch": "./node_modules/nodemon/bin/nodemon.js -i dist -w src -e ts,json,html,scss --exec \"npm run build\"",
    "start-test-server": "cd tests/server && nodemon --ext ts --ignore *.spec.ts --exec ts-node main",
    "test": "npm run ::bg-test-server \"ng test --sourcemap=false --watch=false\"",
    "test:ci": "npm run ::bg-test-server \"ng test  --browsers PhantomJS --watch=false\"",
    "test:watch": "npm run ::bg-test-server \"ng test --sourcemap=false\"",
    "e2e": "ng e2e",
    "::concurently": "./node_modules/.bin/concurrently --kill-others --success=first -- ",
    "::bg-test-server": "npm run ::concurently -- \"npm run start-test-server\""
  },
  "private": true,
  "author": "Nicolas THIERION <nicolas.thierion@outlook.com>",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/Pryum/ack-synapse"
  },
  "description": "Easy to use http client based on es6 annotations, inspired by the library 'Retrofit'",
  "keywords": [
    "http",
    "rest",
    "annotations",
    "es6",
    "retrofit",
    "angular"
  ],
  "dependencies": {
    "qs": "^6.5.1",
    "reflect-metadata": "^0.1.10",
    "url-search-params-polyfill": "^2.0.2",
    "whatwg-fetch": "^2.0.3"
  },
  "peerDependencies": {
    "core-js": "^2.4.1",
    "rxjs": "^5.5.2",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "@angular/cli": "next",
    "@angular/common": "^5.0.0",
    "@angular/compiler": "^5.0.0",
    "@angular/compiler-cli": "^5.0.0",
    "@angular/core": "^5.0.0",
    "@angular/forms": "^5.2.0",
    "@angular/http": "^5.0.0",
    "@angular/language-service": "^5.0.0",
    "@angular/platform-browser": "^5.0.0",
    "@angular/platform-browser-dynamic": "^5.0.0",
    "@angular/router": "^5.0.0",
    "@types/faker": "^4.1.2",
    "@types/jasmine": "~2.5.53",
    "@types/jasminewd2": "~2.0.2",
    "@types/lodash": "^4.14.91",
    "@types/node": "~6.0.60",
    "@types/qs": "^6.5.1",
    "codelyzer": "^4.0.1",
    "concurrently": "^3.5.1",
    "core-js": "^2.4.1",
    "faker": "^4.1.0",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "~4.1.0",
    "json-server": "^0.12.1",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-mocha-reporter": "^2.2.5",
    "karma-phantomjs-launcher": "^1.0.4",
    "lodash": "^4.17.4",
    "mkdirp": "^0.5.1",
    "ng-packagr": "next",
    "nodemon": "^1.14.3",
    "phantomjs-prebuilt": "^2.1.16",
    "protractor": "~5.1.2",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^5.5.2",
    "rxjs-tslint-rules": "^3.3.0",
    "ts-node": "^4.1.0",
    "tslint": "~5.7.0",
    "tslint-angular": "^1.0.0",
    "typescript": "next",
    "zone.js": "^0.8.14"
  }
}
